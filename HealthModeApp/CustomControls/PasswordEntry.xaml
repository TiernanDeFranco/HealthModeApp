<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthModeApp.CustomControls.PasswordEntry">

    <Grid HorizontalOptions="FillAndExpand" x:Name="BaseGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Entry x:Name="EntryField" MaxLength="50" Grid.Column="0" Placeholder="Password" IsPassword="True" TextChanged="EntryField_TextChanged" HorizontalOptions="FillAndExpand"/>
        <ImageButton Margin="-50,0,0,0" Padding="1" x:Name="HideIcon" Aspect="AspectFit" WidthRequest="24" HeightRequest="24" Grid.Column="1" Source="eyeblindicon" Clicked="HideIcon_Clicked"/>

    </Grid>

</ContentView>

