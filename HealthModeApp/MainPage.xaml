<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthModeApp.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Nutrition Info" Clicked="OnAddDataClicked"/>
        <ToolbarItem Text="Refresh" Clicked="OnRefreshClicked"/>

    </ContentPage.ToolbarItems>

    <CollectionView x:Name="dataList"
                    SelectionMode="Single"
                    SelectionChanged="OnEditDataClicked">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Label Text="{Binding FoodName}" FontSize="Medium" />
            </DataTemplate>

        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage>
