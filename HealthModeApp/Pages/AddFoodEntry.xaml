<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthModeApp.Pages.AddFoodEntry"
             Title="Add to Database">
            
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Submit"
                     Clicked="OnUploadEntryClicked"/>

    </ContentPage.ToolbarItems>
    <ScrollView>
    <VerticalStackLayout Margin="15,15,15,15">
        
        <StackLayout x:Name="FoodPage1">
        <HorizontalStackLayout>
         <Label Text="Barcode:"/>
        <Entry Text="{Binding Path=Food.Barcode}" Margin="170,-5,0,0" Placeholder="Barcode"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
        <Label Text="Food Name:"/>
        <Entry Text="{Binding Path=Food.FoodName}" Margin="150,-5,0,0"  Placeholder="ex. Potato Chips"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
        <Label Text="Brand Name:"/>
        <Entry Text="{Binding Path=Food.Brand}" Margin="142.5,-5,0,0"  Placeholder="ex. Lays"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
        <Label Text="Serving Size (g):"/>
        <Entry Text="{Binding Path=Food.ServingSize}" Margin="129,-5,0,0"  Placeholder="ex. 28"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
        <Label Text="Serving Size Alt:"/>
        <Entry Text="{Binding Path=Food.ServingName}" Margin="127,-10,0,0"  Placeholder="ex. About 15 chips"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
        <Label Text="Calories" Margin="0,25,0,0"/>
        <Entry Text="{Binding Path=Food.Calories}" Margin="176,15,0,0"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
        <Label Text="Protein (g)" Margin="0,15,0,0"/>
        <Entry Text="{Binding Path=Food.Protein}" Margin="162,7,0,0"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
        <Label Text="Carbs (g)" Margin="0,25,0,0"/>
        <Entry Text="{Binding Path=Food.Carbs}" Margin="172,15,0,0"/>
        </HorizontalStackLayout>
            
        <HorizontalStackLayout>
        <Label Text="Sugar (g)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.Sugar}" Margin="157,-10,0,0"/>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout>    
        <Label Text="Added Sugar (g)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.AddSugar}" Margin="111.5,-10,0,0"/>
        </HorizontalStackLayout>    
        
        <HorizontalStackLayout>    
        <Label Text="Sugar Alcohol (g)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.SugarAlc}" Margin="106,-9,0,0"/>
        </HorizontalStackLayout>    
        
        <HorizontalStackLayout>    
        <Label Text="Fiber (g)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.Fiber}" Margin="161,-9,0,0"/>
        </HorizontalStackLayout>    
           
        <Label Text="Net Carbs (g)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.NetCarb}" Margin="15,0,0,0"/>

        <Label Text="Fat (g)" Margin="0,25,0,0"/>
        <Entry Text="{Binding Path=Food.Fat}"/>
        <Label Text="Saturated Fat (g)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.SatFat}" Margin="15,0,0,0"/>
        <Label Text="Polyunsaturated Fat (g)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.PUnSatFat}" Margin="15,0,0,0"/>
        <Label Text="Monounsaturated Fat (g)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.MUnSatFat}" Margin="15,0,0,0"/>
        <Label Text="Trans Fat (g)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.TransFat}" Margin="15,0,0,0"/>

        <Label Text="Iron (mg)" Margin="0,25,0,0"/>
        <Entry Text="{Binding Path=Food.Iron}"/>
        <Label Text="Calcium (mg)"/>
        <Entry Text="{Binding Path=Food.Calcium}"/>
        <Label Text="Potassium (mg)"/>
        <Entry Text="{Binding Path=Food.Potassium}"/>
        <Label Text="Sodium (mg)"/>
        <Entry Text="{Binding Path=Food.Sodium}"/>
        <Label Text="Cholesterol (mg)"/>
        <Entry Text="{Binding Path=Food.Cholesterol}"/>

        <Label Text="Vitamin A (%)" Margin="0,25,0,0"/>
        <Entry Text="{Binding Path=Food.VitaminA}"/>

        <Label Text="Vitamin B:" Margin="0,15,0,0"/>
        <Label Text="Vitamin B1 [Thiamin] (%)" Margin="15,10,0,0"/>
        <Entry Text="{Binding Path=Food.Thiamin}" Margin="15,0,0,0"/>
        <Label Text="Vitamin B2 [Riboflavin] (%)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.Riboflavin}" Margin="15,0,0,0"/>
        <Label Text="Vitamin B3 [Niacin] (%)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.Niacin}" Margin="15,0,0,0"/>
        <Label Text="Vitamin B5 [Panthothenic Acid] (%)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.B5}" Margin="15,0,0,0"/>
        <Label Text="Vitamin B6 [Pyridoxin] (%)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.B6}" Margin="15,0,0,0"/>
        <Label Text="Vitamin B7 [Biotin] (%)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.B7}" Margin="15,0,0,0"/>
        <Label Text="Vitamin B9 [Folic Acid] (%)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.FolicAcid}" Margin="15,0,0,0"/>
        <Label Text="Vitamin B12 [Cobalamin] (%)" Margin="15,0,0,0"/>
        <Entry Text="{Binding Path=Food.B12}" Margin="15,0,0,0"/>

        <Label Text="Vitamin C (%)" Margin="0,15,0,0"/>
        <Entry Text="{Binding Path=Food.VitaminC}"/>
        <Label Text="Vitamin D (%)" Margin="0,5,0,0"/>
        <Entry Text="{Binding Path=Food.VitaminD}"/>
        <Label Text="Vitamin E (%)" Margin="0,5,0,0"/>
        <Entry Text="{Binding Path=Food.VitaminE}"/>
        <Label Text="Vitamin K (%)" Margin="0,5,0,0"/>
        <Entry Text="{Binding Path=Food.VitaminK}"/>

        </StackLayout>

       
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>