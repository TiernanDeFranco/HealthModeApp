<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthModeApp.Pages.AddFoodEntry"
             Title="Add to Database">
            
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Submit"
                     Clicked="OnUploadEntryClicked"/>

    </ContentPage.ToolbarItems>
    <ScrollView  Margin="25">
    <StackLayout>
            <Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width=".75*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Label Grid.Row="0" Grid.Column="0" Text="Barcode:" />
    <Entry Grid.Row="0" Grid.Column="1" />

    <Label Grid.Row="1" Grid.Column="0" Text="Food Name:" />
    <Entry Grid.Row="1" Grid.Column="1" Placeholder="ex. Potato Chips"/>

    <Label Grid.Row="2" Grid.Column="0" Text="Brand Name:" />
    <Entry Grid.Row="2" Grid.Column="1" Placeholder="ex. Lays"/>

    <Label Grid.Row="3" Grid.Column="0" Text="Serving Size (g):" />
    <Entry Grid.Row="3" Grid.Column="1" Placeholder="ex. 28" Keyboard="Numeric"/>

    <Label Grid.Row="4" Grid.Column="0" Text="Serving Name:" />
    <Entry Grid.Row="4" Grid.Column="1" Placeholder="ex. About 15 chips"/>

    <Label Grid.Row="5" Grid.Column="0" Text="Calories:" Margin="0,15,0,0" />
    <Entry Grid.Row="5" Grid.Column="1" Margin="0,15,0,0" Keyboard="Numeric"/>

    <Label Grid.Row="6" Grid.Column="0" Text="   " />
    <Label Grid.Row="6" Grid.Column="1" Text="   " />

    <Label Grid.Row="7" Grid.Column="0" Text="Carbohydrates (g):" />
    <Entry Grid.Row="7" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="8" Grid.Column="0" Text="Sugar (g):" />
    <Entry Grid.Row="8" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="9" Grid.Column="0" Text="Added Sugar (g):" />
    <Entry Grid.Row="9" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="10" Grid.Column="0" Text="Sugar Alcohol (g):" />
    <Entry Grid.Row="10" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="11" Grid.Column="0" Text="Fiber (g):" />
    <Entry Grid.Row="11" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="12" Grid.Column="0" Text="Net Carbs (g):" />
    <Entry Grid.Row="12" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="13" Grid.Column="0" Text="  " />
    <Label Grid.Row="13" Grid.Column="1" Text="  " />

    <Label Grid.Row="14" Grid.Column="0" Text="Fat (g):" />
    <Entry Grid.Row="14" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="15" Grid.Column="0" Text="Saturated Fat (g):" />
    <Entry Grid.Row="15" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="16" Grid.Column="0" Text="Polyunsaturated Fat (g):" />
    <Entry Grid.Row="16" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="17" Grid.Column="0" Text="Monounsaturated Fat (g):" />
    <Entry Grid.Row="17" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="18" Grid.Column="0" Text="Trans Fat (g):" />
    <Entry Grid.Row="18" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="19" Grid.Column="0" Text="  " />
    <Label Grid.Row="19" Grid.Column="1" Text="  "/>

    <Label Grid.Row="20" Grid.Column="0" Text="Protein (g):" />
    <Entry Grid.Row="20" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="21" Grid.Column="0" Text="Iron (mg):" Margin="0,15,0,0"/>
    <Entry Grid.Row="21" Grid.Column="1" Margin="0,15,0,0" Keyboard="Numeric"/>

    <Label Grid.Row="22" Grid.Column="0" Text="Calcium (mg):" />
    <Entry Grid.Row="22" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="23" Grid.Column="0" Text="Potassium (mg):" />
    <Entry Grid.Row="23" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="24" Grid.Column="0" Text="Sodium (mg):" />
    <Entry Grid.Row="24" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="25" Grid.Column="0" Text="Cholesterol (mg):" />
    <Entry Grid.Row="25" Grid.Column="1" Keyboard="Numeric" />

    <Label Grid.Row="26" Grid.Column="0" Text="   " />
<Label Grid.Row="26" Grid.Column="1" Text="   "/>

<Label Grid.Row="27" Grid.Column="0" Text="Vitamin A (%):" />
<Entry Grid.Row="27" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="28" Grid.Column="0" Text="Vitamin B1 [Thiamin] (%):" />
<Entry Grid.Row="28" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="29" Grid.Column="0" Text="Vitamin B2 [Riboflavin] (%):" />
<Entry Grid.Row="29" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="30" Grid.Column="0" Text="Vitamin B3 [Niacin] (%):" />
<Entry Grid.Row="30" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="31" Grid.Column="0" Text="Vitamin B5 [Panthothenic Acid] (%):" FontSize="13"/>
<Entry Grid.Row="31" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="32" Grid.Column="0" Text="Vitamin B6 [Pyridoxin] (%):" />
<Entry Grid.Row="32" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="33" Grid.Column="0" Text="Vitamin B7 [Biotin] (%):" />
<Entry Grid.Row="33" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="34" Grid.Column="0" Text="Vitamin B9 [Folic Acid] (%):" />
<Entry Grid.Row="34" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="35" Grid.Column="0" Text="Vitamin B12 [Cobalamin] (%):" />
<Entry Grid.Row="35" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="36" Grid.Column="0" Text="Vitamin C (%):" />
<Entry Grid.Row="36" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="37" Grid.Column="0" Text="Vitamin D (%):" />
<Entry Grid.Row="37" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="38" Grid.Column="0" Text="Vitamin E (%):" />
<Entry Grid.Row="38" Grid.Column="1" Keyboard="Numeric" />

<Label Grid.Row="39" Grid.Column="0" Text="Vitamin K (%):" />
<Entry Grid.Row="39" Grid.Column="1" Keyboard="Numeric" />

    
    </Grid>


    </StackLayout>
    </ScrollView>
</ContentPage>