<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthModeApp.Pages.UpdatePage"
             Title="Update">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Start" Padding="15" Margin="0,50,0,0">
        <Frame>
            <VerticalStackLayout Spacing="5">
                <Label Text="Please Update" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource LightPrimary}}" FontFamily="Lato-Bold" FontSize="Title" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="Start"/>
                <Label x:Name="VersionText" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="Medium"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
