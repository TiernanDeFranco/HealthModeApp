<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthModeApp.Pages.Dashboard"
             Title="Dashboard">

    <ScrollView>
     <Grid x:Name="dashboardGrid" Margin="35">
  <Grid.RowDefinitions>
    <RowDefinition Height="*"/>
    <RowDefinition Height="*"/>
  </Grid.RowDefinitions>

    <StackLayout Spacing="15" Grid.Row="0">
      <Frame CornerRadius="20" HeightRequest="{Binding Width, Source={x:Reference dashboardGrid}}" WidthRequest="{Binding Width, Source={x:Reference dashboardGrid}}">
          <Label Text="Dashboard" FontSize="Medium" FontFamily="Lato-Bold"/>
           
      </Frame>
    </StackLayout>
        
</Grid>
</ScrollView>
</ContentPage>


