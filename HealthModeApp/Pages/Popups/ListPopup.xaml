<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="HealthModeApp.Pages.Popups.ListPopup"

             CloseWhenBackgroundIsClicked="True">

    <Frame HorizontalOptions="Center" VerticalOptions="Center" Padding="15" Margin="25">
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Spacing="8">
            <Label x:Name="TitleLabel" Text="Title" FontFamily="Lato-Bold" FontSize="Title" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" VerticalOptions="Start"/>

            <ListView x:Name="PickerList" ItemSelected="PickerList_ItemSelected" BackgroundColor="Transparent"/>

        </StackLayout>

    </Frame>
</mopups:PopupPage>
