<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="HealthModeApp.Pages.Popups.InfoPopup"

             CloseWhenBackgroundIsClicked="True">

    <Frame HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="15" Margin="15">
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Spacing="8">
            <Label x:Name="TitleLabel" Text="Title" FontFamily="Lato-Bold" FontSize="Title" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" VerticalOptions="Start"/>

            <Label x:Name="TextLabel" Text="This is the example text" FontSize="Medium" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

            <Button Margin="0,12,0,0" Text="Ok" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Button_Clicked"/>
        </StackLayout>

    </Frame>
</mopups:PopupPage>
